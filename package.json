{
  "name": "scriptinel",
  "version": "0.1.2",
  "description": "Install script firewall for npm - default-deny lifecycle scripts with explicit, reviewable allowlists",
  "keywords": [
    "npm",
    "security",
    "supply-chain",
    "install-scripts",
    "ci",
    "firewall",
    "lifecycle-scripts",
    "postinstall",
    "preinstall",
    "npm-security",
    "supply-chain-security"
  ],
  "author": "Mariselvam",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "scriptinel": "bin/scriptinel"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "prebuild": "node -e \"if(parseInt(process.versions.node.split('.')[0])<18){console.error('❌ Node.js 18+ required. Current:', process.versions.node);process.exit(1)}\"",
    "build": "tsc",
    "dev": "tsc --watch",
    "pretest": "node -e \"if(parseInt(process.versions.node.split('.')[0])<18){console.error('❌ Node.js 18+ required. Current:', process.versions.node);process.exit(1)}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxmari/scriptinel.git"
  },
  "bugs": {
    "url": "https://github.com/dxmari/scriptinel/issues"
  },
  "homepage": "https://github.com/dxmari/scriptinel#readme",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
